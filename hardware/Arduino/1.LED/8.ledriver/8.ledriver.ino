//流水灯

//******************************逻辑******************************//
  /* 通过for循环让led依次亮灭*/

//******************************全局部分******************************//
int i;

//******************************初始化******************************//
void setup()
{
  for(i=3;i<10;i++)
  {
    pinMode(i,OUTPUT);
  }
}

//******************************内层函数******************************//
void ledriver()
{
  for(i=3;i<10;i++)
  {
    digitalWrite(i,HIGH);
    delay(500);
    digitalWrite(i,LOW);
  }
}

//******************************主函数******************************//
void loop()
{
  ledriver();
}